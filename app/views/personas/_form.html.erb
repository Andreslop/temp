<%= form_for @persona do |f| %>
    <div>
      <%= f.label :nombre %>
      <%= f.text_field :nombre %>  
    </div>
    <div>
    <%= f.label :apellido %>        
    <%= f.text_field :apellido %>    
    </div>
    <div>
    <%= f.label :email %>
    <%= f.email_field :email %>  
    </div>  
    <div>
    <%= f.label :edad , class: "btn btn-info" %>    
    <%= f.number_field :edad %>
    </div>
  <%= f.submit form_title %>
<% end %>